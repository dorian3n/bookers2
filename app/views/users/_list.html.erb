<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>

		<!-- no-image画像の表し方 -->
		<%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>

		<table class="table">
			<tbody>
				<tr></tr>
				<tr>
					<th>name</th>
					<th><%= user.name %></th>
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= user.introduction %></th>
				</tr>
			</tbody>
		</table>
		<div class="row">

			<!-- エディットのアイコンをlink_toで表示する書き方 -->
			<%= link_to (edit_user_path(user.id)) do %>
				<span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" ></span>
			<% end %>

		</div>
		<h2>New book</h2>
		<%= form_for(book) do |f| %>
			<p>Title</p>
			<%= f.text_field :title ,class: 'col-xs-12'%>

			<p>Opinion</p>
			<%= f.text_area :body ,class: 'col-xs-12'%>

			<%= f.submit("Create Book", class: 'col-xs-12 btn btn-primary') %>
		<% end %>
	</div>