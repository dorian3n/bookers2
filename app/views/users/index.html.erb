<% if @new_book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @new_book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @new_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= render 'users/list', book: @new_book , user: @user %>


	<div class="col-xs-9">
		<h2>Users</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td>
						<span><%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></span>
					</td>
					<td>
						<span><%= user.name %></span>
					</td>
					<td>
						<span><%= link_to "Show", user_path(user.id) %></span>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
